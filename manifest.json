{
    "manifest_version": 3,
    "name": "Shearer",
    "description": "Shearer is a browser extension that simplifies accessing Minecraft Script API documentation by converting it into an easily usable JSON format. With a simple interface, users can select, scrape, and copy data with just a click.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "action": {
      "default_popup": "./popup/index.html",
      "default_icon": "./images/icon.png"
    },
    "background": {
      "service_worker": "./scripts/service-worker.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./scripts/content.js"]
      }
    ],
    "web_accessible_resources": [],
    "content_security_policy": {
      "extension-pages": "script-src 'self' https://cdn.jsdelivr.net/; object-src 'self'"
    }
}